         <graphic>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/list_games.png" />
               </image>
            </ImageView>
         </graphic></ToggleButton>
      <ToggleButton minHeight="80.0" minWidth="150.0" mnemonicParsing="false" onAction="#addGame" text="%add_book" toggleGroup="$tougleButtons">
