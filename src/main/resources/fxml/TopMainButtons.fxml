            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/joystick.png" />
               </image>
            </ImageView>
         </graphic></ToggleButton>
      <ToggleButton minHeight="80.0" minWidth="150.0" mnemonicParsing="false" onAction="#addCategory" text="%add_category" toggleGroup="$tougleButtons">
         <graphic>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/settings-for-categories.png" />
               </image>
            </ImageView>
         </graphic>
      </ToggleButton>
      <ToggleButton minHeight="80.0" minWidth="150.0" mnemonicParsing="false" onAction="#addAuthor" text="%add_author" toggleGroup="$tougleButtons">
         <graphic>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/programming.png" />
               </image>
            </ImageView>
         </graphic>
      </ToggleButton>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
